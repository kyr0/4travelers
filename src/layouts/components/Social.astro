---
const { source, className } = Astro.props;

import Icon from "./Icon.astro";

const {
  facebook,
  twitter,
  instagram,
  youtube,
  linkedin,
  github,
  discord,
  soundcloud,
  vk,
  whatsapp,
  tiktok,
  email,
  phone,
  address,
  spotify,
  website,
} = source || {};

import spotifyImage from "../../images/icons/spotify.svg"

---

<ul class={className}>
  {
    facebook && (
      <li class="inline-block">
        <a
          aria-label="facebook"
          href={facebook}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
          <Icon name="Facebook" />
        </a>
      </li>
    )
  }
  {
    twitter && (
      <li class="inline-block">
        <a
          aria-label="twitter"
          href={twitter}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
          <Icon name="Twitter" />
        </a>
      </li>
    )
  }
  {
    spotify && (
      <li class="inline-block">
        <a
          aria-label="spotify"
          href={spotify}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
