---
import { markdownify } from "@lib/utils/textConverter";
import { BsArrowRightCircle } from "react-icons/bs/index.js";
const { authors } = Astro.props;
---

<div class="row justify-center">
  {
    authors.map((author: any) => (
      <div class="col-12 sm:col-6 md:col-4 mb-8">
        {author.data.image && (
          <div class="mb-4">
            <img
              src={author.data.image}
              alt={author.data.title}
              height={150}
              width={150}
              class="mx-auto rounded-lg"
            />
          </div>
        )}
        <h3 class="h4 mb-3 mt-8">
          <a
            href={`/authors/${author.slug}`}
            class="hover:text-primary block transition duration-200"
          >
            {author.data.title}
          </a>
        </h3>
        <p class="mb-3" set:text={markdownify(author.body.slice(0, 100))} />
        <a
          href={`/authors/${author.slug}`}
          class="text-primary inline-flex items-center transition duration-200 hover:opacity-70"
        >
          Read More{" "}
          <BsArrowRightCircle className="ml-2 inline"  />
        </a>
      </div>
    ))
  }
</div>
